      <Label text="CONNECTION STATUS" />
      <Separator />
      <HBox alignment="CENTER" spacing="5.0">
         <children>
            <Label text="PHOBOS" />
            <ProgressIndicator fx:id="phobosProgress" />
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="5.0">
         <children>
            <Label text="DEIMOS" />
            <ProgressIndicator fx:id="deimosPhobos" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
